@if (ShowDetailsPage)
{
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow rounded-3 border-0 overflow-hidden">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0">@EmployeeDetails.Name - Employee Profile</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row">
                            <!-- Employee Profile Section -->
                            <div class="col-md-4 text-center mb-4 mb-md-0">
                                <div class="mb-4">
                                    <img src="@EmployeeDetails.Photo"
                                         class="img-thumbnail rounded-circle shadow-sm border-0"
                                         style="width:150px; height:150px; object-fit: cover;"
                                         alt="@EmployeeDetails.Name" />
                                </div>
                                <div class="p-3 bg-light rounded-3 shadow-sm">
                                    <h4 class="mb-1">@EmployeeDetails.Name</h4>
                                    <p class="text-muted mb-2">@EmployeeDetails.JobName</p>
                                    <div class="d-flex justify-content-center gap-2 mt-3">
                                        <a href="tel:@EmployeeDetails.TelephoneNumber" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-telephone-fill me-1"></i> Call
                                        </a>
                                        <button class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-envelope-fill me-1"></i> Message
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Info Tables Section -->
                            <div class="col-md-8">
                                <div class="row g-3">
                                    <!-- Personal Info -->
                                    <div class="col-12">
                                        <div class="card border-0 shadow-sm rounded-3 h-100">
                                            <div class="card-header bg-white border-bottom border-2 border-primary py-2">
                                                <h6 class="mb-0"><i class="bi bi-person-fill me-2"></i>Personal Information</h6>
                                            </div>
                                            <div class="card-body p-3">
                                                <div class="row g-2">
                                                    <div class="col-sm-6">
                                                        <p class="mb-1 text-muted small">Telephone</p>
                                                        <p class="mb-2"><strong>@EmployeeDetails.TelephoneNumber</strong></p>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <p class="mb-1 text-muted small">Address</p>
                                                        <p class="mb-2"><strong>@EmployeeDetails.Address</strong></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Department Info -->
                                    <div class="col-md-6">
                                        <div class="card border-0 shadow-sm rounded-3 h-100">
                                            <div class="card-header bg-white border-bottom border-2 border-success py-2">
                                                <h6 class="mb-0"><i class="bi bi-building me-2"></i>Department</h6>
                                            </div>
                                            <div class="card-body p-3">
                                                <div class="mb-2">
                                                    <p class="mb-1 text-muted small">General Department</p>
                                                    <p class="mb-2"><strong>@EmployeeDetails.Branch.Department.GeneralDepartment.Name</strong></p>
                                                </div>
                                                <div class="mb-2">
                                                    <p class="mb-1 text-muted small">Department</p>
                                                    <p class="mb-2"><strong>@EmployeeDetails.Branch.Department.Name</strong></p>
                                                </div>
                                                <div>
                                                    <p class="mb-1 text-muted small">Branch</p>
                                                    <p class="mb-0"><strong>@EmployeeDetails.Branch.Name</strong></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Location Info -->
                                    <div class="col-md-6">
                                        <div class="card border-0 shadow-sm rounded-3 h-100">
                                            <div class="card-header bg-white border-bottom border-2 border-info py-2">
                                                <h6 class="mb-0"><i class="bi bi-geo-alt-fill me-2"></i>Location</h6>
                                            </div>
                                            <div class="card-body p-3">
                                                <div class="mb-2">
                                                    <p class="mb-1 text-muted small">Country</p>
                                                    <p class="mb-2"><strong>@EmployeeDetails.Town.City.Country.Name</strong></p>
                                                </div>
                                                <div class="mb-2">
                                                    <p class="mb-1 text-muted small">City</p>
                                                    <p class="mb-2"><strong>@EmployeeDetails.Town.City.Name</strong></p>
                                                </div>
                                                <div>
                                                    <p class="mb-1 text-muted small">Town</p>
                                                    <p class="mb-0"><strong>@EmployeeDetails.Town.Name</strong></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light d-flex justify-content-end py-3">
                        <button class="btn btn-outline-danger px-4" @onclick="DetailsPageCloseBtnClicked">
                            <i class="bi bi-x-circle me-2"></i>Close
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool ShowDetailsPage { get; set; }
    [Parameter] public Employee EmployeeDetails { get; set; } = new();
    [Parameter] public EventCallback HandleDetailsPageCloseBtnClicked { get; set; } = new();

    public async Task DetailsPageCloseBtnClicked() => await HandleDetailsPageCloseBtnClicked.InvokeAsync();
}